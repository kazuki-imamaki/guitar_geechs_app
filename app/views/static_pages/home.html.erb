<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron jumbotron-extend">
  <h1>Welcome to the Guitar_Share</h1>

  <h2>
　　あなたの好きなギタリストをシェアしましょう
  </h2>

  <%= link_to "Sign up now!", signup_path , class: "btn btn-lg btn-primary" %>
  <p><%= link_to "Guest Log in", easy_login_path, method: :post, class: 'btn btn-primary' %></p>
</div>


                      
<% end %>